// start post-slider
div(id="post-slider" class="carousel slide" data-ride="carousel")
	div(class="carousel-inner")
		- for(let i=0; i<=2; i++)
			- let client = newsList[i]
				div(class=`carousel-item${i === 0? ' active':''}`)
					figure
						img(src=`${client.img}`, alt=`${client.title}`, title=`${client.title}`)/
						figcaption
							h3= `${client.title}`
					button(class="btn btn-post h-style") read more
						<i class="fa fa-arrow-right ml-3" aria-hidden="true"></i>
	div(class='carousel-control')
		a(class="carousel-control-prev",
			href="#post-slider",
			role="button",
			data-slide="prev")
			<i class="fa fa-arrow-left" aria-hidden="true"></i>
			span(class="sr-only") Previous
		a(class="carousel-control-next",
			href="#post-slider",
			role="button",
			data-slide="next")
			<i class="fa fa-arrow-right" aria-hidden="true"></i>
			span(class="sr-only") Next
// end post-slider
