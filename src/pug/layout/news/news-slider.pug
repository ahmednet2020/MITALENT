// start news slider
div(id="news-slider" class="carousel pb-3" data-ride="carousel")
	ol(class="carousel-indicators")
		li(data-target="#news-slider" data-slide-to="0" class="active")
		li(data-target="#news-slider" data-slide-to="1")
		li(data-target="#news-slider" data-slide-to="2")
	div(class="carousel-inner")
		- for(let i=0; i<=2; i++)
			- let news = newsList[i]
			div(class=`carousel-item${i === 0? ' active': ''}`)
				include news-blog
// end news slider
