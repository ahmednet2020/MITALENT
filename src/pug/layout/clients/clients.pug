// ===== start clients=========
section(class="clients pt-5 pb-5")
	.container
		include clients-filter
		// start clients grid 
		div(class="clients-item mt-5")
			div(class="row m-0")
				-for(let i=0; i<=7; i++)
					-let client = clients[i]
						div(class="p-0 col-12 col-md-6 col-lg-4 col-xl-3")
							include client
		// end clients grid 
		button(type="button",
				class="btn btn-primary btn-more text-uppercase") explore more
// ===== end clients=========