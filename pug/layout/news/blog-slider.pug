// start blog slider
div(id="blog-slider" class="carousel pb-3" data-ride="carousel")
	ol(class="carousel-indicators flex-column")
		li(data-target="#blog-slider" data-slide-to="0" class="active")
		li(data-target="#blog-slider" data-slide-to="1")
		li(data-target="#blog-slider" data-slide-to="2")
	div(class="carousel-inner")
		- for(let i = 0; i<=2; i++)
			- let play = newsList[i]
			div(class=`carousel-item${i === 0? ' active':''}`)
				include blog-play
// end blog slider
