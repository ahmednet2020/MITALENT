// ===== start news=========
section(class="news pt-5 pb-5")
	.container
		div(class="row")
			div(class="col-12 col-lg-8")
				include news/trending
				div(class="row")
					div(class="col-12 col-lg-6 mt-4")
						- let news = newsList[0]
						include news/news-blog
					div(class="col-12 col-lg-6 mt-4")
						include news/blog-slider
			div(class="col-12 col-lg-4")
				div(id="news-slider" class="carousel pb-3" data-ride="carousel")
					ol(class="carousel-indicators")
						li(data-target="#news-slider" data-slide-to="0" class="active")
						li(data-target="#news-slider" data-slide-to="1")
						li(data-target="#news-slider" data-slide-to="2")
					div(class="carousel-inner")
						- for(let i=0; i<=2; i++)
							- let news = newsList[i]
							div(class=`carousel-item${i === 0? ' active': ''}`)
								include news/news-blog
// ===== end news=========